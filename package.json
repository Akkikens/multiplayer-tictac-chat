{
  "name": "tic-tac-toe",
  "version": "1.0.0",
  "private": true,
  "description": "Multiplayer Tic-Tac-Toe game",
  "license": "ISC",
  "author": "Akshay Kalapgar <akshaykalapgar23@gmail.com>",
  "scripts": {
    "postinstall": "npm install --save-dev @types/express",
    "build": "tsc && cd client && npm install && npm run build",
    "start": "node dist/index.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@types/socket.io": "^3.0.1",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.18",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
